.r-button
  font-family 'Open Sans', sans-serif
  text-decoration none
  border none
  &:hover
  &:focus
    border none
.button-secondary
  padding 0.6rem 2.2rem
  font-size 1.1rem
  background-color #f6f6f6
  color #416166
  font-weight normal
  &:hover
    background-color #00a2c2
    color #ffffff
  @media screen and (max-width: 768px)
    width 100%
    font-size 1.3rem
    padding 0.7rem 0
    color #000000
    margin-bottom 0.7rem
.primary-button-block
  background-color #00a2c2
  text-transform uppercase
  width 100%
  display block
  padding 2rem 0
  color #ffffff
  font-family 'Open Sans', sans-serif
  font-weight bold
  border none
  margin-top 1.7rem
  text-decoration none
  transition background 250ms ease-in-out, 
              transform 150ms ease
  -webkit-appearance none
  -moz-appearance none
  &:hover
  &:focus
    border none
    background-color #00a2c2
  &:active
    transform scale(0.99)
.orange-button-block
  background-color #f48515
  text-transform uppercase
  width 100%
  display block
  padding 2rem 0
  color #ffffff
  font-family 'Open Sans', sans-serif
  font-weight bold
  border none
  margin-top 1.7rem
  text-decoration none
  transition background 250ms ease-in-out, 
              transform 150ms ease
  -webkit-appearance none
  -moz-appearance none
  &:hover
  &:focus
    border none
  &:active
    transform scale(0.99)

.rombus-float-buttons-container
  position absolute
  right 20px
  top 5px
  i
    color #00a2c2
  .rombus-close
    font-size 1.7rem
    vertical-align bottom
    &:before{content: "\2715"}
  .rombus-edit
    font-size 1.7rem
  @media screen and (min-width: 768px)
    right 20px
    top 5px
.start-now-button
  text-transform uppercase
  border none
  background-color #24a4b4
  padding 1.3rem 3.7rem !important
  font-size 1.1rem
  letter-spacing: 1.4px;
  color #ffffff
  border-radius 3rem
  font-weight normal
  font-family 'Open Sans', sans-serif
  cursor pointer
  @media screen and (min-width: 768px)
    padding 1.4rem 3.6rem !important
    font-size 1.5rem
    border-radius 3rem
    letter-spacing: 1.7px
  &:hover
  &:focus
    background-color #24a4b4
    border none
    color #ffffff
