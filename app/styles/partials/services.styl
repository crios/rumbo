.services-section
    @media screen and (max-width: 768px)
        padding-left 2rem
        padding-right 2rem
.services-title
.services-subtitle
    color #1d1d1b
    font-size 1.5rem
    line-height 2rem
    font-weight 600
    text-align center
    margin 0.5rem 0
    @media screen and (min-width: 768px)
        font-size 2rem
        line-height 2.5rem
.services-subtitle2
    color #555555
    font-size 1.24rem
    line-height 2rem
    font-weight 400
    text-align center
.services-subtitle2-container
    margin-bottom 1.5rem
.services-title-container
    margin-top 3rem
    margin-bottom 3rem
    @media screen and (min-width: 768px)
        margin-top 7rem
        margin-bottom 2rem
.services-subtitle
    font-weight 300
    @media screen and (min-width: 768px)
        font-weight normal

.service-card-container
    margin-top 2rem
    margin-bottom 1rem
    padding 0
    @media screen and (min-width: 768px)
        padding-left 10rem
        padding-right 10rem
        margin-bottom 9rem
.start-now-container
    margin-bottom 3rem
    @media screen and (min-width: 768px)
        margin-bottom 9rem
.service-card
    padding-left 0.5rem
    padding-right 0.5rem
    @media screen and (max-width: 768px)
        padding 0
        margin-top 0.4rem
    max-height 100px
    text-align center
    @media screen and (min-width: 768px)
        max-height 295px
    color #fff
    overflow hidden
    box-sizing border-box
    h4
        font-weight 300
        font-stretch normal
        margin-top 0.8rem
        margin-bottom 1.4rem
        font-size 1.2rem
        @media screen and (max-width: 768px)
            letter-spacing 0.68px
        @media screen and (min-width: 768px)
            margin-top 1.2rem
            margin-bottom 2rem
            font-size 1.6rem
    .icon-big
        font-size 2.5rem
        margin-top 1.3rem
        @media screen and (min-width: 768px)
            font-size: 4rem
            margin-top 4rem
    .icon-big-binoculars
        font-size 2.1rem
        margin-top 1.7rem
        @media screen and (min-width: 768px)
            font-size: 3.5rem
            margin-top 4.5rem
    .icon-small
        font-weight 400
        font-size 1.5rem
        line-height 1.5rem
        @media screen and (min-width: 768px)
            font-size 2rem
            line-height 2rem
    .rounded-icon
        padding: 0 0.4rem
        border-radius 50%
        border solid 1px #ffffff
        margin-bottom 1.8rem !important
        display inline-block
