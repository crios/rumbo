/*Tooltip*/
.tooltip-rombus
  &:hover
    .tooltiptext-rombus
      visibility visible
      opacity 1
  position relative
  .tooltiptext-rombus
    visibility hidden
    width 250px
    background-color #f8f8f8
    color #878787
    text-align center
    padding 10px 10px 10px 10px
    top -15px
    right 120%
    font-size 13px
    position absolute
    z-index 1
    opacity 0
    transition opacity 1s
    &::after
      content " "
      position absolute
      top 35%
      left 100% /* To the right of the tooltip */
      margin-top -5px
      border-width 5px
      border-style solid
      border-color transparent transparent transparent #f8f8f8

